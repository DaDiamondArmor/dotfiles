        "format-wifi": "Ôá´",
        "format-ethernet": "Ôõø",
        "on-click-right": "networkmanager_dmenu",
        "tooltip-format": "{ifname} via {gwaddr} Ôûñ",
        "format-linked": "Ôûñ",
        "format-disconnected": "‚ö†",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
