default partial alphanumeric_keys
xkb_symbols "basic" {
    include "us(basic)"
    name[Group1]= "English (US, ThinkPad Swap)";

    // remapped pgup, pgdn to home and end
    key <HOME> { [ Prior ] };
    key <PGUP> { [ Home ] };
    key <END>  { [ Next ] };
    key <PGDN> { [ End ] };

    // remapped altR to modR
    replace key <RALT> { [ Super_R ] };
    modifier_map Mod4 { <RALT> };
};
